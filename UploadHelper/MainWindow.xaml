<Window x:Class="UploadHelperWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="파일 업로드 도우미 (WPF)" Height="400" Width="600">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="파일을 리스트에 추가하고, 선택 후 브라우저로 드래그하세요." FontSize="15" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Name="DeleteSelectedButton" Content="선택 삭제" Width="100" Height="30" Margin="0,0,10,0" Click="DeleteSelectedButton_Click"/>
                <Button Name="DeleteAllButton" Content="전체 삭제" Width="100" Height="30" Click="DeleteAllButton_Click"/>
            </StackPanel>
        </StackPanel>
        <Button Name="AddButton" Content="파일 추가" DockPanel.Dock="Bottom" Height="40" Click="AddButton_Click"/>
        <ListBox Name="FileListBox" SelectionMode="Extended" PreviewMouseLeftButtonDown="FileListBox_PreviewMouseLeftButtonDown" Margin="10"/>
    </DockPanel>
</Window> 
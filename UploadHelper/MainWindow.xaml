<Window x:Class="UploadHelperWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="파일 업로드 도우미 (WPF)" Height="400" Width="600"
        Icon="/Resources/app.ico">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="파일을 리스트에 추가하고, 선택 후 브라우저로 드래그하세요." FontSize="15" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Name="DeleteSelectedButton" Click="DeleteSelectedButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗑" Margin="0,0,5,0"/>
                        <TextBlock Text="선택 삭제"/>
                    </StackPanel>
                </Button>
                <Button Name="DeleteAllButton" Click="DeleteAllButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗑" Margin="0,0,5,0"/>
                        <TextBlock Text="전체 삭제"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
        <Button Name="AddButton" DockPanel.Dock="Bottom" Height="40" Click="AddButton_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📁" Margin="0,0,5,0"/>
                <TextBlock Text="파일 추가"/>
            </StackPanel>
        </Button>
        <ListBox Name="FileListBox" 
                 SelectionMode="Extended" 
                 PreviewMouseLeftButtonDown="FileListBox_PreviewMouseLeftButtonDown"
                 AllowDrop="True"
                 Drop="FileListBox_Drop"
                 DragEnter="FileListBox_DragEnter"
                 Margin="10"/>
    </DockPanel>
</Window> 